#include <stdio.h>
int main()
{
  int number_to_test , remainder;
  printf("enter the number to be tested:");
  scanf("%d\n , &number_to_test");

  remainder = number_to_test % 2;


   if ( remainder == 0)
    printf("%d the number is even\n");
    else 
    printf("%d the number is odd\n");

    return 0;
  
}